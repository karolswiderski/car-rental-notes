@model car_rental_notes.Models.ViewModels.Wall.AnnouncementsVM
<link href="~/StylesCSS/Wall/AnnouncementsCSS.css" rel="stylesheet" />

@using (@Html.BeginForm("AddAnnouncement", "Wall", FormMethod.Post, htmlAttributes: new { @id = "" }))
{
    @Html.AntiForgeryToken()

    <div class="">
        <div class="text-infomation">Temat:</div>
        @Html.EditorFor(model => model.Temat, new { htmlAttributes = new { @placeholder = "--- temat ---", @class = "add-ann-subject" } })
    </div>
    <div class="add-ann-box" style="margin-left:auto;margin-right:auto;">
        <div class="text-infomation">Treść:</div>
        @Html.TextAreaFor(model => model.Tresc, 10, 95, new { htmlAttributes = new { @placeholder = "--- max 500 słów ---", @class = "add-ann-content" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>

}
