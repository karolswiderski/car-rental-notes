<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="@Url.Content("~/StylesCSS/Layout/LayoutCSS.css")" rel="stylesheet" type="text/css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Baloo+2&display=swap" rel="stylesheet">
</head>
<body>
    
    <div id="main-container">

        <div id="left-menu-container">

            <div id="logo-box"></div>

            <nav id="left-menu-navigation">
                <ul>
                    <li>MENU</li>
                </ul>
            </nav>

            <div id="main-menu-box">
                <ul>
                    <li><a href="#">OGŁOSZENIA</a></li>
                    <li><a href="/Board/Index">TABLICA</a></li>
                    <li><a href="#">LISTA</a></li>
                    <li><a href="#"></a></li>
                    <li><a href="#">MOJE KONTO</a></li>
                </ul>

            </div>

            <div id="back-to-content-box">
                <i id="back-to-content-btn" onclick="" class="far fa-arrow-alt-circle-left"></i>
            </div>
        </div>

        <div id="page-content">
            <div id="open-close-left-menu" onmouseover=""></div>

            <div id="content-box">
                <div id="top-tools-bar">
                       @RenderSection("top-tools-bar", false)
                </div>

                @RenderBody();
           </div>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
